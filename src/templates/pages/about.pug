extends ../template

block variables
  - var title = "About"

block content
  header.header
    .header__nav-bar
      .header__socials
        ul.socials
          -
            var socials = [
              ["vk", "https://vk.com/alexanderpatsura"],
              ["github", "https://github.com/AlexandrPatsura"],
              ["in", "https://www.linkedin.com/in/alexander-patsura-355a8b13b/"]
            ]
          each social in socials
            li.socials__item
              a.socials__link(href=`${social[1]}`, class=`socials__item_${social[0]}`, target="_blank")
                svg(width="30" height="22").socials__sprite
                  use(xlink:href=`assets/images/sprites/sprite.svg#${social[0]}`)
      .toggle-menu
        span.sandwich
          span.top
          span.center
          span.bottom
      nav.menu-fullscreen
        ul.menu.menu-column
          -
            var pages = [
              ["works.html", "Мои работы"],
              ["about.html", "Обо мне"],
              ["blog.html", "Блог"],
              ["index.html", "Авторизация"],
            ]
          each page in pages
            li.menu-fullscreen__item
              a(href=`${page[0]}`).menu-fullscreen__link.title.title-color #{page[1]}
    .user__card
      .welcome
        .user__avatar
          img(src="assets/images/avatar.jpg", alt="User-avatar").user__img
        .info__user.info_color
          h2.user__name Пацура Александр
          p.user__desc Личный сайт веб разработчика

    //- ///////////////////////////////////////////////////////////////////////////////////////////

    .user__scroll
      a.arrow-down(href="#")
        svg.sprite__arrow-down(width="30" height="22")
          use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/sprites/sprite.svg#arrow_down")

  //- ///////////////////////////////////////////////////////////////////////////////////////////

  .section__triangle
    svg.about__triangle_left(xmlns='http://www.w3.org/2000/svg', width="100%" height="153" viewbox='0 0 1000 85', preserveaspectratio='none')
      polygon.left(points='0,0 0,86 1030,86 1030,86')
    svg.about__triangle_right(xmlns='http://www.w3.org/2000/svg', width="100%" height="153" viewbox='0 0 1000 85', preserveaspectratio='none')
      polygon.right(points='1000,0 1000,86 -030,86 -030,86')

  //- ///////////////////////////////////////////////////////////////////////////////////////////

  .section.about
    .about__column.about__left
      .about__left-title
        h2.title Обо мне
        svg(width="100%" height="130").about-title__picture
          use(xlink:href="assets/images/sprites/sprite.svg#about_header")
      .about__left-content
        .user-description
          .user-description__image
            img(src="assets/images/avatar.jpg", alt="User-avatar").user-description__avatar
          //- .user-description__title
          h3.subtitle.center Кто я
          .user-description__text.text-content
            p Я веб разработчик из Новосибирска. Мне 27 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
            p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
    .about__column.about__right
      .about__right-title
        h3.subtitle.center Чем я могу вам<br> быть полезен
        p.text-content Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.
      .about__right-content
        ul.tech-list
          -
            var skills = [
              ["FrontEnd"],
              ["BackEnd"], 
              ["WorkFlow"]
            ]
          each skill in skills
            li.tech-list__item
              .tech-row
                .tech-row__title #{skill}
                ul.skills-list
                  -
                    var skillItems = [
                      ["HTML", "CSS", "JavaScript & jQuery"],
                      ["PHP", "mySQL", "Node.js & npm", "Mongo.db"],
                      ["Git", "Gulp", "Bower"]
                    ]
                  each skillItem in skillItems
                    li.skills-list__item
                      svg.skill__circle(viewBox="0 0 110 110")
                        circle(r="45" cx="50%" cy="50%" fill="none").circle__first
                        circle(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)").circle__second.circle-50
                      span.skill__title #{skillItem[0]}
  .section.google-map
    #map
    .map__data
      .contacts
        //- .contacts__title
        h2.subtitle.center Контакты
        ul.contacts__list
          -
            var contacts = [
              ["skype", "alexandrpatsura", "skype:alexandrpatsura?call"],
              ["envelope", "alexandrpatsura@gmail.com", "mailto:alexandrpatsura@gmail.com"],
              ["phone", "+38 093 99 19 612", "tel:+380939919612"],
              ["map_marker", "г. Запорожье", "https://www.google.ru/maps/place/47%C2%B046'53.3%22N+35%C2%B011'11.6%22E/@47.781466,35.1857892,18z/data=!3m1!4b1!4m6!3m5!1s0x0:0x0!7e2!8m2!3d47.7814665!4d35.1865414"]
            ]
          each item in contacts
            li.contacts__item
              //- .contacts-row
              .contacts-row__icon
                svg(width="30" height="22").contacts-row_sprites
                  use(xlink:href=`assets/images/sprites/sprite.svg#${item[0]}`)
              .contacts-row__content
                a.contacts__link(href=`${item[2]}`, class=`socials__item_${item[0]}`, target="_blank") #{item[1]}

    //- ///////////////////////////////////////////////////////////////////////////////////////////

  footer.footer.about-footer
    include ../common/footer